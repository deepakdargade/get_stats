<script>
 $(function () {
    var chart;
    $(document).ready(function() {
        chart = new Highcharts.Chart({
            chart: {
                renderTo: "container<%=stats.first[0]%>",
                type: 'line'
            },
            title: {
                text: "<%=stats.first[0]%>"
            },
            subtitle: {
                text: ""
                // <% if session[:report_type] == 'custom' %>
                // "From: <%=session[:report_start_date] %> to <%=session[:report_end_date]%>"
