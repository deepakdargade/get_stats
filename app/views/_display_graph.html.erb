            tooltip: {
                enabled: false,
                formatter: function() {
                    return '<b>'+ this.series.name +'</b><br/>'+
                        this.x +': '+ this.y +'Â°C';
                }
            },
            plotOptions: {
                line: {
                    dataLabels: {
                        enabled: true
                    },
                    enableMouseTracking: false
                }
            },
            series: [{
                name: '',
                data: [<% stats.each_with_index do |c,i|%>
                	<%= c[2]%>
                		<%if i != (stats.length - 1) %>
                	,
                	<% end %>
                <% end %>]
            }]
